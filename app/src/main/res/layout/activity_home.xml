<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    //Layout activity_home digunakan untuk menampilkan berbagai berita penting CNN.
    //Layout ini akan ditampilkan jika member sudah berhasil login aplikasi ini.

    //Scroll view untuk menggerakkan layar keatas dan kebawah
    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="128dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //LinearLayout untuk button
            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                //Button untuk Logout
                <Button
                    android:id="@+id/buttlogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    tools:layout_editor_absoluteX="280dp"
                    tools:layout_editor_absoluteY="26dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#353364"/>

                //Button untuk Tentang
                <Button
                    android:id="@+id/buttentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Tentang"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="26dp"
                    android:textColor="#FFFFFF"
                    android:background="#B22222"/>

                //Button untuk Galeri
                <Button
                    android:id="@+id/butvideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Galeri"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#353364"/>
            </LinearLayout>

            //LinearLayout untuk berita
            <LinearLayout
                android:id="@id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                //LinearLayout untuk berita1
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#DCDCDC">

                    //Gambar berita1
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="144dp"
                        android:layout_height="117dp"
                        app:srcCompat="@drawable/berita"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="102dp"
                        android:layout_marginRight="30dp"/>

                    //Berita 1
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="197dp"
                        android:layout_height="119dp"
                        android:text="Berita..... 1"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="100dp"
                        android:clickable="true"/>
                </LinearLayout>

                //LinearLayout untuk berita2
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#1BCEDF">

                    //Gambar berita2
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="144dp"
                        android:layout_height="117dp"
                        app:srcCompat="@drawable/berita"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="102dp"
                        android:layout_marginRight="30dp"/>

                    //Berita2
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="197dp"
                        android:layout_height="119dp"
                        android:text="Berita..... 2"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="100dp"
                        android:clickable="true"/>
                </LinearLayout>

                //LinearLayout untuk berita3
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#DCDCDC">

                    //Gambar berita3
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="144dp"
                        android:layout_height="117dp"
                        app:srcCompat="@drawable/berita"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="102dp"
                        android:layout_marginRight="30dp"/>

                    //Berita3
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="197dp"
                        android:layout_height="119dp"
                        android:text="Berita..... 3"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="100dp"
                        android:clickable="true"/>
                </LinearLayout>

                //LinearLayout untuk berita4
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#1BCEDF">

                    //Gambar berita4
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="144dp"
                        android:layout_height="117dp"
                        app:srcCompat="@drawable/berita"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="102dp"
                        android:layout_marginRight="30dp"/>

                    //Berita4
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="197dp"
                        android:layout_height="119dp"
                        android:text="Berita..... 4"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="100dp"
                        android:clickable="true"/>
                </LinearLayout>

                //LinearLayout untuk berita5
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#DCDCDC">

                    //Gambar berita5
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="144dp"
                        android:layout_height="117dp"
                        app:srcCompat="@drawable/berita"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="102dp"
                        android:layout_marginRight="30dp"/>

                    //Berita5
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="197dp"
                        android:layout_height="119dp"
                        android:text="Berita..... 5"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="100dp"
                        android:clickable="true"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>